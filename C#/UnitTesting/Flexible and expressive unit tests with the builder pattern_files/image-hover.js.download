jQuery(document).ready(function($){
	$('.hoverurl').hover(function() {
		$(this).find('i').stop().animate({
			opacity: 0.8
		}, 'fast');
		$(this).find('a').stop().animate({
			"top": "0"
		});
	}, function() {
		$(this).find('i').stop().animate({
			opacity: 0
		}, 'fast');
		$(this).find('a').stop().animate({
			"top": "-600px"
		});
	});
	$('.hoverzoom').hover(function() {
		$(this).find('z').stop().animate({
			opacity: 0.8
		}, 'fast');
		$(this).find('a').stop().animate({
			"top": "0"
		});
	}, function() {
		$(this).find('z').stop().animate({
			opacity: 0
		}, 'fast');
		$(this).find('a').stop().animate({
			"top": "-600px"
		});
	});

});